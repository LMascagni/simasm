{
   "name": "simasm",
   "publisher": "LMascagni",
   "displayName": "simcpu-asm",
   "description": "SIMASM - Assembler and machine language for SIMCPU",
   "version": "2.1.0",
   "activationEvents": [
      "onStartupFinished"
   ],
   "main": "./extension.js",
   "engines": {
      "vscode": "^1.99.3"
   },
   "categories": [
      "Programming Languages"
   ],
   "contributes": {
      "languages": [
         {
            "id": "simasm",
            "aliases": [
               "SIMASM",
               "simasm"
            ],
            "extensions": [
               ".axx",
               ".asm"
            ],
            "configuration": "./language-configuration.json"
         }
      ],
      "grammars": [
         {
            "language": "simasm",
            "scopeName": "source.simasm",
            "path": "./syntaxes/simasm.tmLanguage.json"
         }
      ],
      "themes": [
         {
            "label": "SIMCPU Syntax",
            "uiTheme": "vs-dark",
            "path": "./themes/simcpu-syntax-color-theme.json"
         }
      ],
      "snippets": [
         {
            "language": "simasm",
            "path": "./snippets/simasm.code-snippets"
         }
      ],
      "commands": [
         {
            "command": "extension.formatDocument",
            "title": "Format SIMASM Document"
         },
         {
            "command": "extension.toggleFormattingStyle",
            "title": "Toggle SIMASM Formatting Mode"
         }
      ],
      "configuration": {
         "title": "SIMASM",
         "properties": {
            "simasm.formattingStyle": {
               "type": "string",
               "enum": [
                  "full",
                  "compact"
               ],
               "default": "full",
               "description": "Stile di formattazione: 'full' allinea etichetta, istruzione e operandi. 'compact' solo etichetta e istruzione."
            }
         }
      }
   },
   "repository": {
      "type": "git",
      "url": "https://github.com/LMascagni/simasm"
   }
}