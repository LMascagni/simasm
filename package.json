{
  "name": "simasm",
  "publisher": "LMascagni",
  "displayName": "simcpu-asm",
  "description": "SIMASM - estensione per il linguaggio di SIMCPU",
  "icon": "images/icon.png",
  "version": "5.0.1",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "engines": {
    "vscode": "^1.99.3"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "simasm",
        "aliases": [
          "SIMASM",
          "simasm"
        ],
        "extensions": [
          ".axx"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "simasm",
        "scopeName": "source.simasm",
        "path": "./syntaxes/simasm.tmLanguage.json"
      }
    ],
    "themes": [
      {
        "label": "SIMCPU Syntax",
        "uiTheme": "vs-dark",
        "path": "./themes/simcpu-syntax-color-theme.json"
      }
    ],
    "snippets": [
      {
        "language": "simasm",
        "path": "./snippets/simasm.code-snippets"
      }
    ],
    "commands": [
      {
        "command": "extension.formatDocument",
        "title": "Format SIMASM Document"
      },
      {
        "command": "extension.toggleFormattingStyle",
        "title": "SIMASM: Toggle Formatting Mode"
      },
      {
        "command": "extension.showInstructions",
        "title": "Show SIMASM Instructions"
      },
      {
        "command": "extension.showFlowChart",
        "title": "SIMASM: Show Flow Chart"
      }
    ],
    "configuration": {
      "title": "SIMASM",
      "properties": {
        "simasm.formattingStyle": {
          "type": "string",
          "enum": [
            "full",
            "compact"
          ],
          "default": "full",
          "description": "Stile di formattazione: 'full' allinea etichetta, istruzione e operandi. 'compact' solo etichetta e istruzione."
        },
        "simasm.outlineView": {
          "type": "boolean",
          "default": true,
          "description": "Abilita/disabilita la visualizzazione della struttura del documento nell'Outline View"
        }
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LMascagni/simasm"
  }
}
